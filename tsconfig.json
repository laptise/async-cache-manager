{
  "compilerOptions": {
    // ソースマップを有効化
    "sourceMap": true,
    // TSはECMAScript 5に変換
    "target": "ES6",
    // TSのモジュールはES Modulesとして出力
    "module": "ES6",
    // 厳密モードとして設定
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "skipLibCheck": true
  },
  "include": ["./src"]
}
